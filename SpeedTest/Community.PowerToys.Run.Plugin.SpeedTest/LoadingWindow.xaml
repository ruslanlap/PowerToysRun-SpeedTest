                    <!-- Enhanced content area -->
                    <ScrollViewer x:Name="OutputScrollViewer"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 Padding="20"
                                 Margin="0,44,0,0"
                                 Background="#0A0F172A">
